# Routes
GET     /                      controllers.AppController.index()
GET     /horses                controllers.HorseController.listHorses()
GET     /horses/:id            controllers.HorseController.readHorse(id: String)
POST    /horses                controllers.HorseController.createHorse()
PUT     /horses/:id            controllers.HorseController.updateHorse(id: String)
DELETE  /horses/:id            controllers.HorseController.deleteHorse(id: String)
